<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF0F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerHorizontal"
        android:dividerPadding="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="middle">

        <!-- Judul -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="🧠 Prediksi Risiko Stroke"
            android:textAlignment="center"
            android:textColor="#6A1B9A"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Kartu Form Input -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Judul Form -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:text="📋 Formulir Pasien"
                    android:textColor="#880E4F"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Input Umur -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Umur (tahun)"
                        android:inputType="number"
                        android:textColor="#6A1B9A" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Button-Button Pilihan -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_gender"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Jenis Kelamin"
                    android:textColor="#6A1B9A"
                    android:textSize="15dp"
                    app:icon="@drawable/ic_gender"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_married"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Status Menikah"
                    android:textColor="#6A1B9A"
                    android:textSize="15dp"
                    app:icon="@drawable/ic_married"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_residence"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Tipe Tempat Tinggal"
                    android:textColor="#6A1B9A"
                    android:textSize="15dp"
                    app:icon="@drawable/ic_home"
                    app:iconPadding="8dp" />

                <!-- Glukosa -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_glucose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Glukosa Rata-rata"
                        android:inputType="numberDecimal"
                        android:textColor="#6A1B9A" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- BMI -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_bmi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="BMI"
                        android:inputType="numberDecimal"
                        android:textColor="#6A1B9A"
                        android:textSize="15dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Hipertensi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_hypertension"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Hipertensi"
                    android:textColor="#6A1B9A"
                    android:textSize="15dp"
                    app:icon="@drawable/ic_blood_presure"
                    app:iconPadding="8dp" />

                <!-- Penyakit Jantung -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_heart"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Penyakit Jantung"
                    android:textColor="#6A1B9A"
                    android:textSize="15dp"
                    app:icon="@drawable/ic_heart"
                    app:iconPadding="8dp" />

                <!-- Jenis Pekerjaan -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_work"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Jenis Pekerjaan"
                    android:textColor="#6A1B9A"
                    android:textSize="15dp"
                    app:icon="@drawable/ic_work"
                    app:iconPadding="8dp" />

                <!-- Status Merokok -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_smoking"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Status Merokok"
                    android:textColor="#6A1B9A"
                    android:textSize="15dp"
                    app:icon="@drawable/ic_smoking"
                    app:iconPadding="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tombol Prediksi -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_predict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#F48FB1"
            android:text="🔍 Prediksi Sekarang"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="16dp"
            app:iconPadding="8dp" />

        <!-- Hasil Prediksi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FCE4EC"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/text_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textAlignment="center"
                android:textColor="#AD1457"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Riwayat -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#F8BBD0"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
