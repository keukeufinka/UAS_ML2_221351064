<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView Penjelasan -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Judul Dataset -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stroke Prediction Dataset (Kaggle)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <!-- Deskripsi -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dataset ini digunakan untuk memprediksi risiko stroke berdasarkan atribut klinis dan demografis. Terdiri dari 5.110 entri, sering digunakan dalam penelitian klasifikasi biner dengan machine learning."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="16dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp" />

                <!-- Tujuan -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Tujuan Penggunaan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Mengembangkan model prediksi dini stroke.\n- Mengidentifikasi atribut berisiko tinggi.\n- Mendukung keputusan medis berbasis data."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="16dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp" />

                <!-- Catatan Teknis -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ› ï¸ Catatan Teknis"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Format: CSV\n- 11 fitur input 1 target\n- Preprocessing:\n  â€¢ Tangani nilai kosong (BMI)\n  â€¢ Encode kategori\n  â€¢ Normalisasi numerik"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="16dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp" />

                <!-- Link Dataset -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”— Link Dataset Resmi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="https://www.kaggle.com/datasets/fedesoriano/stroke-prediction-dataset"
                    android:textColor="@android:color/holo_blue_dark"
                    android:autoLink="web"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:contentDescription="Link menuju dataset stroke di Kaggle" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Visualisasi Fitur -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ˆ Visualisasi Fitur Dataset"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1B1B1B"
            android:layout_marginBottom="12dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <ImageView
                android:id="@+id/imageTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dataset"
                android:contentDescription="Tabel fitur dataset stroke" />
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
