<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="32dp">

            <!-- Logo Aplikasi -->
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/ic_otak"
                android:contentDescription="Logo Aplikasi"
                android:layout_marginBottom="32dp" />

            <!-- Ucapan Selamat Datang -->
            <TextView
                android:id="@+id/text_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang!"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#1E1E1E"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <!-- Penjelasan Singkat Aplikasi -->
            <TextView
                android:id="@+id/text_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kenali potensi risiko stroke Anda sejak dini. Cukup isi data kesehatan sederhana untuk mendapatkan estimasi tingkat risikonya secara cepat dan mudah."
                android:textSize="16sp"
                android:textColor="#555555"
                android:gravity="center"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
